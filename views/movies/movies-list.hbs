<div id="moviesList">
  <h2>Ironhack Cinema</h2>
  <h5>Click on the movie to check the showtimes!</h6>
  <div class="container">
    <div class="row">
      {{#each movies}}
        <div class="col-sm-4">
          <img class="card-img-top" src="{{image}}" alt="{{title}}" />
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <a href="movies/{{_id}}" class="btn">See more</a>
          </div>
        </div>
        <br />
        <br />
      {{/each}}
    </div>
  </div>
</div>